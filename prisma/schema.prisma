generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Character {
  id Int @id @default(autoincrement())

  name           String
  slug           String    @unique
  alternateNames String[]
  species        String
  gender         String
  house          String?
  birthDate      DateTime?
  birthYear      Int?
  wizard         Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

generator client {
  provider        = "prisma-client"
  output          = "../src/generated/prisma"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
}

model Character {
  id              String    @id @default(uuid())
  name            String
  slug            String    @unique @db.VarChar(300)
  alternateNames  String    @db.VarChar(300)
  species         String    @db.VarChar(300)
  gender          String    @db.VarChar(300)
  house           String    @db.VarChar(300)
  birthDate       DateTime?
  birthYear       Int       @db.Integer
  wizard          Boolean
  ancestry        String    @db.VarChar(300)
  eyeColour       String    @db.VarChar(300)
  hairColour      String    @db.VarChar(300)
  patronus        String    @db.VarChar(300)
  hogwartsStudent Boolean
  hogwartsStaff   Boolean
  actor           String    @db.VarChar(300)
  alternateActors String?   @db.VarChar(300)
  alive           Boolean
  image           String    @db.VarChar(300)

  createdAt DateTime  @default(now())
  updatedAt DateTime? @default(now()) @updatedAt

  wands Wand[]
}

model Wand {
  id          String    @id @default(uuid())
  wood        String?   @db.VarChar(300)
  core        String?   @db.VarChar(300)
  length      Float?
  character   Character @relation(fields: [characterId], references: [id])
  characterId String
}

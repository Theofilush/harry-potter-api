{
  "openapi": "3.1.0",
  "info": {
    "title": "Character API",
    "version": "1.0.0"
  },
  "paths": {
    "/characters": {
      "get": {
        "summary": "Get all characters",
        "responses": {
          "200": {
            "description": "List of characters"
          }
        }
      }
    },
    "/characters/{slug}": {
      "get": {
        "summary": "Get character by slug",
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Character found" },
          "404": { "description": "Character not found" }
        }
      }
    }
  }
}
